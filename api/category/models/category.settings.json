      "model": "category",
      "via": "childs"
    },
    "isRoot": {
      "type": "boolean",
      "default": false
    },
    "products": {
      "collection": "product",
      "via": "category"
    },
    "lang": {
      "type": "enumeration",
      "enum": [
        "en",
        "ru"
      ],
      "required": true
    }
  }
